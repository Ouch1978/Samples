<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        x:Class="Wpf_CustomCursor.CustomCursor3" x:Name="UserControl" Width="Auto" Height="Auto"
        d:DesignWidth="800" d:DesignHeight="600">

    <Grid x:Name="LayoutRoot" Background="Transparent" Width="20" Height="20">
        <Canvas HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" Width="15">
            <Canvas.Effect>
                <DropShadowEffect Opacity="0.5" />
            </Canvas.Effect>
            <Rectangle Fill="#FF646464" Height="12" RadiusY="1" RadiusX="1" Width="12"
                    Canvas.Left="3" Canvas.Top="3" />
            <Rectangle Fill="Black" Height="8" Margin="0" Width="8" />
        </Canvas>
    </Grid>
</UserControl>